<div class="container">
  <h1>お問い合わせ</h1>
  
  <section class="contact-form">
    <h2>お気軽にお問い合わせください</h2>
    
    <%= form_with url: "#", method: :post, local: true do |form| %>
      <div class="form-group">
        <%= form.label :name, "お名前" %>
        <%= form.text_field :name, class: "form-control", required: true %>
      </div>
      
      <div class="form-group">
        <%= form.label :email, "メールアドレス" %>
        <%= form.email_field :email, class: "form-control", required: true %>
      </div>
      
      <div class="form-group">
        <%= form.label :phone, "電話番号" %>
        <%= form.telephone_field :phone, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= form.label :message, "お問い合わせ内容" %>
        <%= form.text_area :message, class: "form-control", rows: 5, required: true %>
      </div>
      
      <div class="form-group">
        <%= form.submit "送信する", class: "btn btn-primary" %>
      </div>
    <% end %>
  </section>
  
  <section class="contact-info">
    <h2>連絡先情報</h2>
    <p>電話: 03-XXXX-XXXX</p>
    <p>営業時間: 9:00 - 18:00（土日祝を除く）</p>
  </section>
</div>
